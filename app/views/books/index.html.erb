<p id="notice"><%= notice %></p>

<h1><%= i18n_connector('phrases.models.book', 'phrases.actions.index') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('attributes.title') %></th>
      <th><%= t('attributes.title_kana') %></th>
      <th><%= t('attributes.author') %></th>
      <th><%= t('attributes.format') %></th>
      <th><%= t('attributes.price') %></th>
      <th><%= t('attributes.publisher') %></th>
      <th><%= t('attributes.published') %></th>
      <th><%= t('attributes.summary') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.title_kana %></td>
        <td><%= book.author %></td>
        <td><%= book.format_label %></td>
        <td><%= number_to_currency(book.price, unit: 'å††', precision: 0, format: '%n%u') %></td>
        <td><%= book.publisher %></td>
        <td><%= book.published %></td>
        <td><%= simple_format(book.summary) %></td>
        <td><%= link_to t('phrases.actions.show'), book %></td>
        <td><%= link_to t('phrases.actions.update'), edit_book_path(book) %></td>
        <td><%= link_to t('phrases.actions.destroy'), book, method: :delete, data: { confirm: t('messages.confirm_destroy')} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

